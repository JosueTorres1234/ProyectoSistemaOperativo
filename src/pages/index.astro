<style>
	body {
  margin: 0;
  font-family: Arial, sans-serif;
  background-color: transparent; 
  background-image: url('/images/nieve.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  color: white;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.desktop {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(15, 15, 15, 0.5); /* Ajusta la opacidad para que sea menos oscura */
  display: flex;
  flex-direction: column;
}

	.app-container {
	  position: absolute;
	  top: 40%;
	  left: 1%; /* Mover los iconos más a la izquierda */
	  transform: translateY(-50%);
	  display: flex;
	  flex-direction: column;
	  gap: 80px; /* Reducir el espaciado */
	}
  
	.app-icon {
	  width: 40px;
	  height: 40px;
	  cursor: pointer;
	  transition: transform 0.2s, opacity 0.2s;
	}
  
	.app-icon:hover, .app-icon.active {
	  transform: scale(1.2);
	  opacity: 0.8;
	}
  
	.taskbar {
	  position: absolute;
	  bottom: 20px;
	  left: 50%;
	  transform: translateX(-50%);
	  background-color: #333;
	  height: 50px;
	  width: 50%;
	  border-radius: 10px;
	  display: flex;
	  justify-content: space-around;
	  align-items: center;
	  box-shadow: 0 2px 5px rgba(204, 193, 193, 0.87);
	}
  
	.taskbar img {
	  width: 30px;
	  height: 30px;
	  cursor: pointer;
	  transition: transform 50 s, opacity 50 s;
	}
  
	.taskbar img:hover, .taskbar img.active {
	  transform: scale(1.2);
	  opacity: 50;
	}
  
	.top-bar {
	  position: absolute;
	  top: 10px;
	  right: 10px;
	  display: flex;
	  align-items: center;
	  gap: 15px;
	}
  
	.top-bar div {
	  display: flex;
	  flex-direction: column;
	  align-items: center;
	}
  
	.top-bar img {
	  width: 20px;
	  height: 20px;
	}
  
	.top-bar .clock {
	  font-size: px;
	}
  </style>
  
  <div class="desktop">
	<div class="top-bar">
	  <div class="wifi">
		<img src="/images/wifi.png" alt="Wi-Fi" />
		<span>Wi-Fi</span>
	  </div>
	  <div class="battery">
		<img src="/images/bateria.png" alt="Battery" />
		<span>100%</span>
	  </div>
	  <div class="clock">
		<span id="current-time"></span>
	  </div>
	  <div class="mobile">
		<img src="/images/mobile-icon.png" alt="Mobile" />
	  </div>
	</div>
	<div class="app-container">
	  <img src="/images/word.png" alt="Word" class="app-icon" />
	  <img src="/images/spotify.png" alt="Spotify" class="app-icon" />
	  <img src="/images/google.png" alt="Google" class="app-icon" />
	  <img src="/images/youtube.png" alt="YouTube" class="app-icon" /> <!-- Añadido YouTube -->
	</div>
	<div class="taskbar">
	  <img src="/images/home.png" alt="Inicio" class="task-icon" />
	  <img src="/images/buscar.png" alt="Buscar" class="task-icon" />
	  <img src="/images/perfil.png" alt="Perfil" class="task-icon" />
	  <img src="/images/confi.png" alt="Configuración" class="task-icon" />
	</div>
  </div>
  
  <script>
	document.addEventListener('DOMContentLoaded', () => {
	  const appIcons = document.querySelectorAll('.app-icon');
	  const taskIcons = document.querySelectorAll('.task-icon');
	  
	  appIcons.forEach(icon => {
		icon.addEventListener('click', () => {
		  appIcons.forEach(i => i.classList.remove('active'));
		  icon.classList.add('active');
		});
	  });
  
	  taskIcons.forEach(icon => {
		icon.addEventListener('click', () => {
		  taskIcons.forEach(i => i.classList.remove('active'));
		  icon.classList.add('active');
		});
	  });
  
